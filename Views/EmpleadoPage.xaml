<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen1_PM_II.Views.EmpleadoPage"
             Title="Agregar Empleado"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="Datos del Empleado" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   TextColor="#333333" 
                   Margin="0,10,0,10"
                   HorizontalOptions="Start"/>

            <Frame CornerRadius="75" 
                   Padding="0" 
                   HeightRequest="150" 
                   WidthRequest="150" 
                   HorizontalOptions="Center" 
                   IsClippedToBounds="True"
                   BorderColor="Transparent"
                   HasShadow="False">
                <Frame.Shadow>
                    <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.3"/>
                </Frame.Shadow>
                <Image x:Name="ImgFoto" 
                       Source="placeholder.png" 
                       Aspect="AspectFill" 
                       HeightRequest="150" 
                       WidthRequest="150"/>
            </Frame>

            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,10,0,10">

                <Button Text="Seleccionar" 
                        Clicked="OnSeleccionarFotoClicked" 
                        BackgroundColor="#03A9F4"  TextColor="White"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        WidthRequest="150"/>

                <Button Text="Tomar Foto" 
                        Clicked="OnTomarFotoClicked" 
                        BackgroundColor="#FF9800" TextColor="White"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        WidthRequest="150"/>

            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Color="#CCCCCC" Margin="0,5,0,5"/>

            <Entry x:Name="TxtNombre" Placeholder="Nombre Completo" Style="{StaticResource ModernEntryStyle}" />
            <DatePicker x:Name="DpFechaIngreso" Format="D" Style="{StaticResource ModernDatePickerStyle}" />
            <Entry x:Name="TxtPuesto" Placeholder="Puesto" Style="{StaticResource ModernEntryStyle}" />
            <Entry x:Name="TxtCorreo" Placeholder="Correo ElectrÃ³nico" Keyboard="Email" Style="{StaticResource ModernEntryStyle}" />

            <Button Text="Guardar Empleado" 
                    Clicked="OnGuardarClicked" 
                    Margin="0,30,0,0"
                    BackgroundColor="#4CAF50" TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="Medium"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>

    <ContentPage.Resources>
        <Style x:Key="ModernEntryStyle" TargetType="Entry">
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="PlaceholderColor" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="Small"/>
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="PlaceholderColor" Value="#AAAAAA"/>
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState Name="Focused">
                            <VisualState.Setters>
                                <Setter Property="PlaceholderColor" Value="#03A9F4"/>
                                <Setter Property="Margin" Value="0,-2,0,-2"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>
    </ContentPage.Resources>
</ContentPage>